<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="0"
                android:centerColor="#5A0012"
                android:centerY="0.5"
                android:endColor="#5A0012"
                android:startColor="#5A0012" />
        </shape>

    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:angle="0"
                    android:centerColor="#ffaaaaaa"
                    android:centerY="0.5"
                    android:endColor="#ffaaaaaa"
                    android:startColor="#ffaaaaaa" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:angle="0"
                    android:centerColor="#EC2650"
                    android:centerY="0.5"
                    android:endColor="#C3002A"
                    android:startColor="#F2486F" />
            </shape>
        </clip>
    </item>

</layer-list>