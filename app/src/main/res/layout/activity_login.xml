<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_login"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="21dp"
        android:paddingRight="25dp"
        android:tag="tv_setting"
        android:text="@string/a_ipsz"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="142" />

        <ImageView
            android:layout_width="112dp"
            android:layout_height="62dp"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/logo"
            android:visibility="visible" />

        <TextView
            android:id="@+id/gradientTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="19dp"
            android:text="故障诊断系统"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="19dp"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@mipmap/block"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="45dp"
                    android:text="LOGIN"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="32dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@mipmap/ic_user"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="@string/a_yhm"
                    android:lines="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="users"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/colorAccent" />

                <EditText
                    android:id="@+id/et_pw"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginRight="32dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@mipmap/ic_password"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="@string/a_mm"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="123"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/colorAccent" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="170dp"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:background="@drawable/shape_btn_colorprimary"
                android:tag="btn_login"
                android:text="@string/a_dl"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="89" />
    </LinearLayout>

</RelativeLayout>